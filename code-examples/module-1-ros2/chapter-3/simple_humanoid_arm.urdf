<?xml version="1.0"?>
<!--
Simple Humanoid Arm URDF Model
Purpose: Demonstrate 3-DOF arm with shoulder pitch, shoulder roll, and elbow joints
Components: Torso (fixed), Upper Arm, Forearm
Prerequisites: ROS 2 Humble, robot_state_publisher, joint_state_publisher_gui
-->
<robot name="simple_humanoid_arm">

  <!-- Base Link (World Reference Frame) -->
  <link name="base_link"/>

  <!-- Torso (Static Body) -->
  <link name="torso">
    <visual>
      <origin xyz="0 0 0.25" rpy="0 0 0"/>
      <geometry>
        <box size="0.3 0.2 0.5"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.25" rpy="0 0 0"/>
      <geometry>
        <box size="0.3 0.2 0.5"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.25" rpy="0 0 0"/>
      <mass value="5.0"/>
      <!-- Inertia tensor for box: I_xx = (1/12)*m*(h^2+d^2) -->
      <inertia ixx="0.13" ixy="0.0" ixz="0.0"
               iyy="0.14" iyz="0.0" izz="0.03"/>
    </inertial>
  </link>

  <!-- Fixed Joint: Base to Torso -->
  <joint name="base_to_torso" type="fixed">
    <parent link="base_link"/>
    <child link="torso"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Upper Arm (Right Side) -->
  <link name="upper_arm">
    <visual>
      <origin xyz="0 0 -0.15" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.04" length="0.3"/>
      </geometry>
      <material name="blue">
        <color rgba="0.0 0.0 1.0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 -0.15" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.04" length="0.3"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 -0.15" rpy="0 0 0"/>
      <mass value="1.0"/>
      <!-- Inertia tensor for cylinder: I_xx = I_yy = (1/12)*m*(3*r^2+h^2) -->
      <inertia ixx="0.0076" ixy="0.0" ixz="0.0"
               iyy="0.0076" iyz="0.0" izz="0.0016"/>
    </inertial>
  </link>

  <!-- Shoulder Pitch Joint (Forward/Backward Motion) -->
  <joint name="shoulder_pitch" type="revolute">
    <parent link="torso"/>
    <child link="upper_arm"/>
    <origin xyz="0.0 0.15 0.4" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>  <!-- Rotate around X-axis -->
    <limit lower="-1.57" upper="1.57" effort="50" velocity="2.0"/>
    <dynamics damping="0.7" friction="0.1"/>
  </joint>

  <!-- Forearm -->
  <link name="forearm">
    <visual>
      <origin xyz="0 0 -0.125" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.25"/>
      </geometry>
      <material name="green">
        <color rgba="0.0 1.0 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 -0.125" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.25"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 -0.125" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.0027" ixy="0.0" ixz="0.0"
               iyy="0.0027" iyz="0.0" izz="0.00045"/>
    </inertial>
  </link>

  <!-- Elbow Joint (Bend Forearm) -->
  <joint name="elbow" type="revolute">
    <parent link="upper_arm"/>
    <child link="forearm"/>
    <origin xyz="0 0 -0.3" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>  <!-- Rotate around X-axis -->
    <limit lower="0.0" upper="2.356" effort="30" velocity="2.0"/>
    <dynamics damping="0.5" friction="0.05"/>
  </joint>

  <!-- Hand End Effector (Optional Visual Marker) -->
  <link name="hand">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.04"/>
      </geometry>
      <material name="red">
        <color rgba="1.0 0.0 0.0 1.0"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.00006" ixy="0.0" ixz="0.0"
               iyy="0.00006" iyz="0.0" izz="0.00006"/>
    </inertial>
  </link>

  <!-- Hand Joint (Fixed) -->
  <joint name="hand_joint" type="fixed">
    <parent link="forearm"/>
    <child link="hand"/>
    <origin xyz="0 0 -0.25" rpy="0 0 0"/>
  </joint>

</robot>
